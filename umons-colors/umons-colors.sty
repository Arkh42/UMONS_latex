
%%              %%
% IDENTIFICATION %
% ============== %



% Version of LaTeX required
% -------------------------
\NeedsTeXFormat{LaTeX2e}

% Package declaration
% -------------------
\ProvidesPackage{umons-colors}[2019/05/22 Package defining the colors specific to the University of Mons (Belgium).]



%%                        %%
% PRELIMINARY DECLARATIONS %
% ======================== %



% Packages needed in the declared options
% ---------------------------------------
\RequirePackage{ifthen}



%%       %%
% OPTIONS %
% ======= %



% 'verbose' option
% ----------------
\newboolean{@verbose}
\setboolean{@verbose}{false}

\DeclareOption{verbose}{%
	\setboolean{@verbose}{true}%
	\PackageInfo{umons-colors}{Option: 'verbose' enabled}%
}


% Default option list
% -------------------
\ExecuteOptions{verbose}


% Processing the options
% ----------------------
\ProcessOptions\relax



%%                 %%
% CORE DECLARATIONS %
% ================= %



% Loading 'xcolor'
% ----------------
\RequirePackage{xcolor}


% Defining global colors for the University
% -----------------------------------------
